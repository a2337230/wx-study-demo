page {
  background-color: #ccc;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container .avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 200rpx;
  border: 10rpx solid rgb(168, 163, 163);
  animation: rotate 5s linear infinite;
}
@keyframes rotate {
  from {
    transform: scale(0.8);
  }
  to {
    transform: rotate(1);
  }
}
.container .text {
  font-size: 30rpx;
  margin: 50rpx 0 100rpx;
}